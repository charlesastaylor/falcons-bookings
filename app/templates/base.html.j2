      <div class="col l3 offset-l1 s12">
        <h5 class="white-text">Connect</h5>
        <ul>
          <li><a class="white-text" href="https://www.facebook.com/northamptonfalcons">Facebook</a></li>
          <li><a class="white-text" href="https://www.instagram.com/northamptonfalcons/">Instagram</a></li>
          <li><a class="white-text" href="mailto:contact@northamptonfalcons.co.uk">Email</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-copyright">
    <div class="container">
    Made by <a class="red-text text-lighten-3" href="mailto:charlesastaylor@gmail.com">Charles</a>
    <span class="right">Â© {{ now.year }} Copyright <a class="red-text text-lighten-3" href="http://www.northamptonfalcons.co.uk">Northampton Falcons</a></span>
    </div>
  </div>
</footer>
{% endblock footer %}

{% block scripts %}
<script
src="https://code.jquery.com/jquery-3.4.1.min.js"
integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="{{ url_for('static', filename='js/falconsbookings.js') }}"></script>
{%- endblock scripts %}

{% include "_messages.html.j2" %}

{% endblock body %}
</body>
</html>
