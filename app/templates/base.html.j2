{% set color = {
  'primary': 'darken-1 red',
  'secondary': 'darken-4 red'
} %}
<!DOCTYPE html>
<html lang="en">
<head>
  {%- block head %}
    <title>{{ title + ' | ' if title else '' }}Falcons Bookings</title>
    {%- block metas %}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {%- endblock metas %}

    {% block favicon %}
    <link rel="apple-touch-icon" sizes="120x120" href="{{ url_for('static', filename='apple-touch-icon.png') }}">
    <link rel="icon" type="image/png" sizes="32x32" href="{{ url_for('static', filename='favicon-32x32.png') }}">
    <link rel="icon" type="image/png" sizes="16x16" href="{{ url_for('static', filename='favicon-16x16.png') }}">
    <link rel="manifest" href="{{ url_for('static', filename='site.webmanifest') }}">
    <link rel="mask-icon" href="{{ url_for('static', filename='safari-pinned-tab.svg') }}" color="#c93737">
    <link rel="shortcut icon" href="{{ url_for('static', filename='favicon.ico') }}">
    <meta name="msapplication-TileColor" content="#b91d47">
    <meta name="msapplication-config" content="{{ url_for('static', filename='browserconfig.xml') }}">
    <meta name="theme-color" content="#ffffff">
    {% endblock favicon %}

    {%- block styles %}
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="{{ url_for('static', filename='css/falconsbookings.css') }}" type="text/css" rel="stylesheet" media="screen,projection"/>
    {%- endblock styles %}

  {%- endblock head %}
</head>
<body>
{% block body -%}
<header>
  {% block navbar %}
  <nav class="darken-4 grey" role="navigation">
    <div class="nav-wrapper container"><a id="logo-container" href="{{ url_for('index') }}" class="brand-logo">falcons bookings</a>
      <ul class="right hide-on-med-and-down">
        {% include "_navbar.html.j2" %}
      </ul>

      <ul id="nav-mobile" class="sidenav">
        {% include "_navbar.html.j2" %}
      </ul>
      <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    </div>
  </nav>
  {%- endblock navbar %}
</header>
<main>
  {% block content -%}
  <h1>Default Content</h1>
  {%- endblock content %}
</main>

{% block footer %}
<footer class="page-footer {{ color.primary }}">
  <div class="container">
    <div class="row">
      <div class="col l8 s12">
        <h5 class="white-text">About Us</h5>
        <p class="grey-text text-lighten-4"><a class="red-text text-lighten-3" href="http://www.northamptonfalcons.co.uk">Northampton Falcons</a> Basketball Club is a local club offering the opportunity for players of all levels of fitness and abilities to train and play basketball in a relaxed and fun atmosphere.</p>
        <p class="grey-text text-lighten-4">Use <a class="red-text text-lighten-3" href="http://www.northamptonfalcons.co.uk"> faclons bookings</a> to keep informed about upcoming training sessions and book your spot to come play!</p>


      </div>
      {# <div class="col l3 s12">
